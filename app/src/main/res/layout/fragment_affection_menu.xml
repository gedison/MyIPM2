<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/background"
             tools:context="clemson.edu.myipm.fragments.affection_menu.AffectionMenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/diagnostics_list_title"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/red"/>

    <clemson.edu.myipm.fragments.affection_menu.ExpandableHeightListView
        android:id="@+id/diagnostics_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:tag="diagnostic" >
    </clemson.edu.myipm.fragments.affection_menu.ExpandableHeightListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/red"
        android:text="@string/general_list_title"/>

    <clemson.edu.myipm.fragments.affection_menu.ExpandableHeightListView
        android:id="@+id/general_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:tag="general" >
    </clemson.edu.myipm.fragments.affection_menu.ExpandableHeightListView>

</LinearLayout>
